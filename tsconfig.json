{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "noEmit": false,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
  },
  "include": ["src/**/*"],
}
